@{
    ViewData["Title"] = "Attendance Generator";
}
<div class="row justify-content-center align-content-center" style="min-height: 80vh;">
    <div class="card col-10 col-sm-9 col-md-6 col-xl-4 border-dark px-0">
        <div class="card-header" style="background-color:burlywood">
            <h4 class="text-center text-white">Attendance Generator</h4>
        </div>
        <form class="card-body" method="post" enctype="multipart/form-data">
            <div class="form-group form-row">
                <label for="panel" class="col-12 ">Select Panel</label>
                <select id="panel" class="form-control" name="panel" required>
                    <option value="T8-Panel1">T-8 TY Panel 1</option>
                    <option value="T11-SPM-Panel1">T-11 SPM Panel 1</option>
                    <option value="UIUXD-T11-Panel1">UIUXD T11 Panel 1</option>
                    <option value="BSc">BSc</option>
                </select>
            </div>
            <div class="form-group form-row">
                <label for="endTime" class="col-6 my-0 align-self-center">Meeting End Time</label>
                <input class="col-6 form-control" type="time" id="endTime" name="EndTime" required />
            </div>
            <div class="form-group form-row">
                <label for="file" class="col-8 ">Meeting CSV</label>
                <div class="form-check col-4">
                    <input id="time" class="form-check-input" type="checkbox" name="time" value="true" />
                    <label for="time" class="form-check-label">Include Time</label>
                </div>
                <div class="custom-file">
                    <input class=" custom-file-input col-12" id="file" name="file" type="file" required />
                    <label class="custom-file-label" for="file">Choose file...</label>
                </div>
            </div>
            <div class="row justify-content-center">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script>
        $('#file').on('change', function (e) {
            //get the file name
            var fileName = e.target.files[0].name;
            //replace the "Choose a file" label
            $(this).next('.custom-file-label').html(fileName);
        })
    </script>
}
